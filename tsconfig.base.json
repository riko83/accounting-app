{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@accounting/shared": ["packages/shared/src"],
      "@accounting/server/*": ["packages/server/src/*"],
      "@accounting/client/*": ["packages/client/src/*"]
    }
  }
}