{
  "name": "accounting-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd packages/server && npm run dev",
    "dev:client": "cd packages/client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd packages/server && npm run build",
    "build:client": "cd packages/client && npm run build",
    "start": "cd packages/server && npm start",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "ts-node packages/server/src/scripts/seed.ts",
    "db:studio": "npx prisma studio",
    "clean": "rimraf dist node_modules packages/*/dist",
    "setup": "npm install && npm run db:generate && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
     
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "xlsx": "^0.18.5",
    
     
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "axios": "^1.6.5",
    
     
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.1", 
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "react-scripts": "5.0.1",
     
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}